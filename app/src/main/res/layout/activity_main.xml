<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="165dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toTopOf="@+id/Ficview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome" />

    <TextView
        android:id="@+id/Ficview"
        android:layout_width="399dp"
        android:layout_height="84dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="6dp"
        android:text="    Fiction Online"
        android:textColor="#F8EFEF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/bnsearch"
        android:layout_width="277dp"
        android:layout_height="91dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#000000"
        android:text="Search"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ficview" />

    <Button
        android:id="@+id/FicCate1"
        android:layout_width="277dp"
        android:layout_height="91dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#000000"
        android:text="Fiction Category"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bnsearch" />

    <Button
        android:id="@+id/top10"
        android:layout_width="277dp"
        android:layout_height="91dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#000000"
        android:text="Top 10            Most Views"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FicCate1" />
</androidx.constraintlayout.widget.ConstraintLayout>